<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget">
    </style>

    <style name="Widget.DD" parent="Widget">
    </style>

    <style name="Widget.DD.Actionbar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="titleTextStyle">@style/TextAppearance.DD.Actionbar</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/TextAppearance.DD.Actionbar</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:displayOptions" tools:ignore="NewApi">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@color/transparent</item>
    </style>
    <style name="Widget.DD.Actionbar.Main">
        <item name="displayOptions">showHome|showTitle</item>
        <item name="android:displayOptions" tools:ignore="NewApi">showHome|showTitle</item>
        <item name="android:icon">@drawable/actionbar_icon_main</item>
    </style>

    <!-- Block -->
    <style name="Widget.DD.Block">
        <item name="android:layout_marginTop">@dimen/max_margin</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="Widget.DD.BlockItem">
        <item name="android:background">@drawable/item_bg_selector</item>
        <item name="android:layout_marginBottom">@dimen/min_margin</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Widget.DD.BlockItem.Large">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="Widget.DD.BlockItem.NoClickable">
        <item name="android:background">@color/item_bg</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="Widget.DD.BlockItem.Large.NoClickable">
        <item name="android:background">@color/item_bg</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="Widget.DD.GridItem" parent="Widget.DD.BlockItem">
        <item name="android:layout_marginTop">@dimen/mid_margin</item>
        <item name="android:layout_marginBottom">@dimen/mid_margin</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!-- text appearance -->
    <style name="TextAppearance.DD" parent="Widget.DD">
    </style>
    <style name="TextAppearance.DD.Actionbar" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    <style name="TextAppearance.DD.BlockItem">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.DD.BlockItem.Light">
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="TextAppearance.DD.BlockItem.Large">
        <item name="android:textSize">@dimen/h2</item>
    </style>
    <style name="TextAppearance.DD.BlockItem.Small">
        <item name="android:textSize">@dimen/h4</item>
    </style>
    <style name="TextAppearance.DD.BlockItem.SubTitle" parent="TextAppearance.DD.BlockItem.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mid_margin</item>
        <item name="android:textColor">#202020</item>
    </style>

    <style name="TextAppearance.DD.BlockItem.Left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="TextAppearance.DD.BlockItem.Left.Large">
        <item name="android:textSize">@dimen/h2</item>
    </style>
    <style name="TextAppearance.DD.BlockItem.Right" parent="TextAppearance.DD.BlockItem.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="TextAppearance.DD.GridItem.Right" parent="TextAppearance.DD.BlockItem.Right">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- image -->
    <style name="Widget.DD.Image.Arrow.Right" parent="Widget.DD">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="coach_main_selector_rb">
        <item name="android:gravity">center</item>
        <item name="android:background">#FFFFC8</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/ic_arrow_down</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">@dimen/coach_main_selector_textSize</item>
        <item name="android:textColor">#3C3C3C</item>
    </style>

    <!-- 透明样式 -->
    <style name="Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
</resources>