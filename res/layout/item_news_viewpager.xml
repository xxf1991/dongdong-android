<?xml version="1.0" encoding="utf-8"?>
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent">
<RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">


    <com.example.dongdong.ui.MyViewPager
            android:id="@+id/image_slide_page"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:focusable="true"/>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignBottom="@id/image_slide_page"
                  android:background="#55000000"
                  style="@style/Transparent"
                  android:padding="10dp" >
    <TextView
            android:id="@+id/tvSlideTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="fsghfhjsdfgvbdgh"
            android:textColor="@android:color/white"
            android:textSize="13dip"
            />

    <LinearLayout android:orientation="horizontal"
                  android:id="@+id/layout_circle_images"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="right">

    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
    </FrameLayout>